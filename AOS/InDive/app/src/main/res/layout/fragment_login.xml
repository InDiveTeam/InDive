<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InDive"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_id"
            android:layout_width="300dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="240dp"
            app:layout_constraintTop_toBottomOf="@id/tv_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:text="jdsaeyqi@naver.com"
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:background="@null"
                android:textSize="16dp"
                android:hint="아이디"
                android:layout_marginHorizontal="10dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pass"
            android:layout_width="300dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:text="123123"
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:background="@null"
                android:hint="비밀번호"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_marginHorizontal="10dp"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입 >"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/cv_pass"
            app:layout_constraintTop_toBottomOf="@id/cv_pass"
            />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="16dp"
            android:background="@drawable/btn_round_main_color_login"
            android:textColor="@color/white"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/btn_join"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



