<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="40dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_bottom"
                android:layout_margin="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/main_black"
                android:textSize="@dimen/toolbar_title" />

        </com.google.android.material.appbar.MaterialToolbar>

        <View
            android:id="@+id/toolbar_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_grey"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />



        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            app:layout_constraintVertical_bias="0.2"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/main_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_email"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_email"
            >

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:background="@null"
                android:textSize="16dp"
                android:hint="이메일"
                android:layout_marginHorizontal="10dp"
                />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_email"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="인증"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_round_main_color"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

        <TextView
            android:id="@+id/tv_email_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증 코드 입력"
            app:layout_constraintVertical_bias="0.2"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/main_black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_email"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_email_check"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toStartOf="@id/btn_email_check"
            app:layout_constraintTop_toBottomOf="@id/tv_email_check"
            app:layout_constraintStart_toStartOf="parent"
            >

            <EditText
                android:id="@+id/et_email_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:background="@null"
                android:hint="인증 코드"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_email_check"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="인증확인"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_round_main_color"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email_check" />

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            app:layout_constraintVertical_bias="0.2"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/main_black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_email_check"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pass"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cv_email_check"
            >

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:background="@null"
                android:hint="비밀번호"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_pass_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/main_black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_pass"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pass_check"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pass_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cv_email_check"
            >

            <EditText
                android:id="@+id/et_pass_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:background="@null"
                android:hint="비밀번호 확인"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/main_black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_pass_check"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_nickname"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toStartOf="@id/btn_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname">

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@null"
                android:hint="닉네임"
                android:singleLine="true"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_nickname"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="중복확인"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_round_main_color"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname" />



        <Button
            android:id="@+id/btn_join"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:background="@drawable/btn_round_main_color"
            android:textColor="@color/white"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>